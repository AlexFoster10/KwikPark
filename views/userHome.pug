doctype html
html(lang='en')
  head
    title KwikPark Admin Page
    meta(property='og:title', content='Admin Page')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(charset='utf-8')
    meta(property='twitter:card', content='summary_large_image')
    style
      include style/style.css
      include style/user.css
      include style/custom.css
      include style/calander.css
    script(src="https://unpkg.com/leaflet/dist/leaflet.js")

  body
    .Page
      .header
        img.logo(src="/img/KwikPark_transparent.png" alt="est. 2024")
        h1.title KwikPark
        .dropdown
          button.burger-icon ☰
        .dropdown-content
          a(href='/admin') Admin
          a(href='/userHome') User Home
          a(href='/login') Login
          a(href='/message') Message
      .main
        h1.pageTitle User Home Page
      .home-slider.swiper-container(data-thq='slider', data-pagination='true', data-navigation='true', data-autoplay='false')
        .swiper-wrapper
          .home-slider-slide.swiper-slide
            .SlideCon
              h1.lotTitle Upcoming Booking
              .lotCon
                .lotConLeft
                  span.lotInfo.textarea
                    br
                    span Parking Lot: Carpark Yellow
                    br
                    br
                    span Space: 5A
                    br
                    br
                    span Vehicle: fj22 di4ja
                    br
                    br
                    span Estimated Price: £5
                    button#openFormButton(type="button") Open Form
                .rightCon
                  img.PLot(src='/img/image.jpg' alt='image')
        .swiper-button-next.swiper-button-next
        .swiper-button-prev.swiper-button-prev
        .swiper-pagination.swiper-pagination-bullets
      .bottom
        .Left
          .home-slider1.swiper-container(data-thq='slider', data-pagination='true', data-navigation='true')
            .swiper-wrapper
              .home-slider-slide2.swiper-slide
                .SlideCon
                  h1.usrTitle Vehicle
                  span.home-text31
                    span Customer: jack daniels
                    br
                    span Registration Num: 5ffw543
                    br
                    span Type: car
                    br
                    span Electric: no
                    br
                    span Disabled: no
                  img.imgBox(src='/img/image.jpg' alt='image')
              .home-slider-slide3.swiper-slide
                .SlideCon
                  h1.usrTitle Vehicle
                  span.home-text31
                    span Customer: jack daniels
                    br
                    span Registration Num: 5ffw543
                    br
                    span Type: car
                    br
                    span Electric: no
                    br
                    span Disabled: no
                  img.imgBox(src='/img/image.jpg' alt='image')
            .swiper-button-next.swiper-button-next
            .swiper-button-prev.swiper-button-prev
            .swiper-pagination.swiper-pagination-bullets
          .userCon
            .wallet
              h1.walletTitle Wallet
              div.walletBalance
                span Balance:
                span.amount £54
              div.walletButtons
                button.prevTrans(type='button') Previous transactions
                button.addToWallet(type='button') Add to wallet
        .msgCon
          h2.msgTitle Messages
          ul.home-ul.list
            li.msgli.list-item
              img.msgimg(src='/img/image.jpg' alt='image')
              span.Sender Sender
              span.Subject Subject
            li.msgli.list-item
              img.msgimg(src='/img/image.jpg' alt='image')
              span.Sender Sender
              span.Subject Subject
            li.msgli.list-item
              img.msgimg(src='/img/image.jpg' alt='image')
              span.Sender Sender
              span.Subject Subject
            li.msgli.list-item
              img.msgimg(src='/img/image.jpg' alt='image')
              span.Sender Sender
              span.Subject Subject
          button.moremsg(type='button') View More Messages
          button.msgadmin(type='button') Email Admin

    .popup-form-container
      .popup-form
        button#closeFormButton(type="button") × // Button to close the form
        h2 Fill in the Form
        form#popupForm
          label(for="name") Name:
          input(type="text" id="name" name="name" required)
          br
          label(for="email") Email:
          input(type="email" id="email" name="email" required)
          br
          button(type="submit") Submit
    script(src='https://code.jquery.com/jquery-3.6.0.min.js')
    script(src='https://code.jquery.com/ui/1.12.1/jquery-ui.min.js')
    script 
      include index.js
      include booking.js
