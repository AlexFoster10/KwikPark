doctype html
html
  head
    title Login Page
    style
      include style/style.css
      include style/booking.css

  body
    .page
      .header
        img.logo(src="/img/KwikPark_transparent.png" alt="est. 2024" )
        h1.title KwikPark
        .dropdown
